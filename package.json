{
    "name": "code-save-slots",
    "displayName": "Code Save Slots",
    "description": "Save slots for your code editing.",
    "version": "0.0.1",
    "publisher": "micnil",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:saveSlotsExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "saveSlotsExplorer",
                    "name": "Save Slots"
                }
            ]
        },
        "commands": [
            {
                "command": "saveSlots.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "saveSlots.quickSave",
                "title": "Quick Save"
            },
            {
                "command": "saveSlots.clearFromFile",
                "title": "Clear"
            },
            {
                "command": "saveSlots.deleteSaveState",
                "title": "Delete"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "saveSlots.refresh",
                    "when": "false"
                },
                {
                    "command": "saveSlots.quickSave",
                    "when": "false"
                },
                {
                    "command": "saveSlots.clearFromFile",
                    "when": "false"
                },
                {
                    "command": "saveSlots.deleteSaveState",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "saveSlots.refresh",
                    "when": "view == saveSlotsExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "saveSlots.clearFromFile",
                    "when": "view == saveSlotsExplorer && viewItem == file"
                },
                {
                    "command": "saveSlots.deleteSaveState",
                    "when": "view == saveSlotsExplorer && viewItem == saveState"
                }
            ]
        },
        "keybindings": [
            {
                "command": "saveSlots.quickSave",
                "key": "ctrl+alt+s",
                "mac": "cmd+alt+s",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.7.1",
        "vscode": "^1.1.10",
        "@types/node": "^9.4.4",
        "@types/mocha": "^2.2.48"
    }
}
