{
    "name": "vscode-checkpoints",
    "displayName": "Code Checkpoints",
    "description": "Checkpoints for your code editing.",
    "version": "0.0.1",
    "publisher": "micnil",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "checkpoint",
        "checkpoints",
        "code checkpoints",
        "stash",
        "file stash",
        "save slots",
        "shelf",
        "shelve",
        "file backup",
        "multi-root ready"
    ],
    "activationEvents": [
        "onCommand:checkpoints.addCheckpoint",
        "onView:checkpointsExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "checkpointsExplorer",
                    "name": "Checkpoints"
                }
            ]
        },
        "commands": [
            {
                "command": "checkpoints.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "checkpoints.addCheckpoint",
                "title": "Add Checkpoint"
            },
            {
                "command": "checkpoints.clearFile",
                "title": "Clear"
            },
            {
                "command": "checkpoints.clearAll",
                "title": "Clear All",
                "icon": {
                    "light": "resources/light/delete.svg",
                    "dark": "resources/dark/delete.svg"
                }
            },
            {
                "command": "checkpoints.deleteCheckpoint",
                "title": "Delete"
            },
            {
                "command": "checkpoints.restoreCheckpoint",
                "title": "Restore Checkpoint"
            },
            {
                "command": "checkpoints.renameCheckpoint",
                "title": "Rename Checkpoint"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "checkpoints.refresh",
                    "when": "false"
                },
                {
                    "command": "checkpoints.addCheckpoint",
                    "when": "false"
                },
                {
                    "command": "checkpoints.clearFile",
                    "when": "false"
                },
                {
                    "command": "checkpoints.clearAll",
                    "when": "false"
                },
                {
                    "command": "checkpoints.deleteCheckpoint",
                    "when": "false"
                },
                {
                    "command": "checkpoints.restoreCheckpoint",
                    "when": "false"
                },
                {
                "command": "checkpoints.renameCheckpoint",
                "when": "false"
            }
            ],
            "view/title": [
                {
                    "command": "checkpoints.refresh",
                    "when": "view == checkpointsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "checkpoints.clearAll",
                    "when": "view == checkpointsExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "checkpoints.clearFile",
                    "when": "view == checkpointsExplorer && viewItem == file"
                },
                {
                    "command": "checkpoints.deleteCheckpoint",
                    "when": "view == checkpointsExplorer && viewItem == checkpoint"
                },
                {
                    "command": "checkpoints.restoreCheckpoint",
                    "when": "view == checkpointsExplorer && viewItem == checkpoint"
                },
                {
                    "command": "checkpoints.renameCheckpoint",
                    "when": "view == checkpointsExplorer && viewItem == checkpoint"
                }
            ]
        },
        "keybindings": [
            {
                "command": "checkpoints.addCheckpoint",
                "key": "ctrl+alt+s",
                "mac": "cmd+alt+s",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.7.1",
        "vscode": "^1.1.10",
        "@types/node": "^9.4.4",
        "@types/mocha": "^2.2.48"
    }
}
